<Window x:Class="Test2.ChooseDataBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2"
        mc:Ignorable="d"
        Title="ChooseDataBase" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox Name="FileName" Grid.Row="0" MinWidth="100" MinHeight="80"></TextBox>
        <Button Content="LoadFile" Click="Button_Click" Grid.Row="1" Height="120" HorizontalAlignment="Center"></Button>
    </Grid>
</Window>
