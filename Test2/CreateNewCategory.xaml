<Window x:Class="Test2.CreateNewCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2"
        mc:Ignorable="d"
        Title="CreateNewItem" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" RenderTransformOrigin="0.997,0.55">
            <Label Content="Include New Expanse: " VerticalAlignment="Top" Margin="0, -3, 0 , 0"/>
            <TextBox x:Name="ExpanseName" Text="New Expanse" VerticalAlignment="Top" Width="200"/>
        </StackPanel>
        
        <Button Content="Enter" Click="Button_Click" Width="150" Margin="10,0,0,10" HorizontalAlignment="Left" Grid.Row="2"  />
        <Button Content="Cancel" Margin="0, 0, 10, 10" Grid.Row="2" Width="150" HorizontalAlignment="Right" Click="Button_Click_1" />
        
        
    </Grid>
</Window>
